<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_acad_tech2"
    tools:context=".MainActivityRegister">

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/registerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registerName"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="21dp"
        android:backgroundTint="@color/acadetech"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewNome" />

    <TextView
        android:id="@+id/textViewEmail1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_email_register"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/registerEmail"
        app:layout_constraintEnd_toStartOf="@+id/registerEmail"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="89dp"
        android:backgroundTint="@color/acadetech"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/registerGender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewEmail1"
        app:layout_constraintTop_toTopOf="@+id/registerName" />

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_gender"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/registerGender"
        app:layout_constraintEnd_toStartOf="@+id/registerGender"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/registerBirthdate"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="31dp"
        android:backgroundTint="@color/acadetech"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewBirth"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_birth"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/registerBirthdate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBirthdate" />

    <TextView
        android:id="@+id/textViewBirthdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="41dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_date"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/registerBirthdate"
        app:layout_constraintEnd_toStartOf="@+id/registerBirthdate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/registerNickName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="92dp"
        android:backgroundTint="@color/acadetech"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewNickName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewNickName" />

    <TextView
        android:id="@+id/textViewNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_user1"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/registerNickName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBirth" />

    <Button
        android:id="@+id/registerSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto"
        android:onClick="register"
        android:text="@string/txt_save"
        android:textColor="@color/acadetech"
        android:textColorHighlight="@color/material_dynamic_primary70"
        android:textColorHint="@color/acadetech"
        android:textColorLink="@color/material_dynamic_primary60"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/registerExit"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/registerExit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="34dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto"
        android:text="@string/txt_exit"
        android:textColor="@color/acadetech"
        android:textColorHighlight="@color/material_dynamic_primary80"
        android:textColorHint="@color/acadetech"
        android:textColorLink="@color/material_dynamic_primary70"
        app:cornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/registerSave" />

    <EditText
        android:id="@+id/registerGender"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="130dp"
        android:backgroundTint="@color/acadetech"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/registerNickName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewGender"
        app:layout_constraintTop_toBottomOf="@+id/registerName" />

</androidx.constraintlayout.widget.ConstraintLayout>